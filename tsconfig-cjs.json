{
    "compilerOptions": {
      "target": "ES2015",                          
      "module": "CommonJS",  
      "lib": ["ES5", "DOM", "ES2015", "ES2015.Collection"],
      "declaration": true,
      "outDir": "lib/cjs",                   
      "strict": false,
      "moduleResolution": "Node",
      "esModuleInterop": true,                  
      "forceConsistentCasingInFileNames": true  
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]                        
}
  